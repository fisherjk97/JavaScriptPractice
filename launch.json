{
    "version": "0.2.0",
    "configurations": [{            
        "type": "node",            
        "request": "launch",            
        "name": "Mocha all tests",            
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",            
        "args": [                
           "--opts",                
           "${workspaceFolder}/mocha.opts",                  
           "${workspaceRoot}/hello/test/*.js"            
        ],            
        "cwd": "${workspaceRoot}",   
        "internalConsoleOptions": "openOnSessionStart"        
     }
    ]
}

/*
npm run example.test.js
npm run problems.test.js
*/